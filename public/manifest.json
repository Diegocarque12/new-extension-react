{
  "manifest_version": 3,
  "name": "Download Interceptor",
  "version": "1.0.0",
  "description": "Intercepta las descargas y muestra un mensaje personalizado",
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "web_accessible_resources": [{
    "resources": ["index.html", "static/js/*.js", "static/css/*.css"],
    "matches": ["<all_urls>"]
  }]
}
